// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Categories {
  id String @id @default(uuid())
  name String
  description String
  created_at DateTime @default(now())

@@unique([name])
  @@map("categories")
}

model Specifications {
  id String @id @default(uuid())
  name String
  description String
  created_at DateTime @default(now())

  @@unique([name])
  @@map("specifications")
}

model Users {
  id String @id @default(uuid())
  name String
  username String
  password String
  email String
  driver_licence String
  isAdmin Boolean @default(false)
  created_at DateTime @default(now())

  @@unique([email])
  @@map("users")
}